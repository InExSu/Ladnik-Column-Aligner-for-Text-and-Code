{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {},
  "overrides": [
    {
      "files": ["**/test/**/*.{ts,js}", "**/tests/**/*.{ts,js}", "**/*.{test,spec}.{ts,js}"],
      "env": {
        "mocha": true
      },
      "globals": {
        "describe": "readonly",
        "it": "readonly",
        "before": "readonly",
        "beforeEach": "readonly",
        "after": "readonly",
        "afterEach": "readonly"
      }
    }
  ]
}
