{
  "name": "ladnik-column-aligner",
  "displayName": "Ladnik Column Aligner",
  "description": "Visual alignment of text and code by columns based on delimiters",
  "version": "1.2.8",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Formatters"
  ],
  "activationEvents": [
    "onCommand:ladnik.alignSelection",
    "onCommand:ladnik.alignFile",
    "onCommand:ladnik.configure"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ladnik.alignSelection",
        "title": "Ladnik: Align Selection"
      },
      {
        "command": "ladnik.alignFile",
        "title": "Ladnik: Align Entire File"
      },
      {
        "command": "ladnik.configure",
        "title": "Ladnik: Configure"
      }
    ],
    "keybindings": [
      {
        "command": "ladnik.alignSelection",
        "key": "ctrl+alt+l",
        "mac": "cmd+alt+l"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "ladnik.alignSelection",
          "group": "navigation",
          "when": "editorHasSelection"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Ladnik Column Aligner",
      "properties": {
        "ladnik.defaultSeparators": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "=>",
            "::",
            "=",
            ":",
            "->",
            ","
          ],
          "description": "Default separators to align on"
        },
        "ladnik.defaultPadding": {
          "type": "number",
          "default": 2,
          "minimum": 0,
          "description": "Number of spaces to pad columns with"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "npx @vscode/vsce package --allow-missing-repository",
    "build": "npm run compile && npm run lint && npm test && npm run package",
    "test-file": "node process-file.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vscode/test-electron": "^2.3.0",
    "@vscode/vsce": "^3.7.1",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5"
  }
}